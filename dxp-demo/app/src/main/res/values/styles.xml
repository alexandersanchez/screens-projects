<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorButtonNormal">#FF20283D</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    </style>

    <style name="AppTheme.PopupOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse"/>

    <style name="label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:editable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="DXPDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/background_material_dark_1</item>
        <item name="android:colorButtonNormal">@color/primary_material_dark</item>
        <item name="android:colorControlNormal">@color/primary_material_dark</item>
    </style>
</resources>
