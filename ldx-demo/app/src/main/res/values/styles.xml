<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="material_theme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse"/>

    <style name="AppTheme.PopupOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse"/>

    <style name="MyToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="theme">@style/MyToolbarTextStyle</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="MyToolbarTextStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:editable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

</resources>
